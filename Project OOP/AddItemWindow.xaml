<Window x:Class="Project_OOP.AddItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_OOP"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Loaded="Window_Loaded"
        Title="AddItemWindow" SizeToContent="Height" Width="250">
    <StackPanel>
        <Label Content="Geef de naam van je item" Margin="5"/>
        <TextBox x:Name="tbxName" Margin="5"/>
        <Label Content="Geef de datum van je item" Margin="5"/>
        <TextBox x:Name="tbxDate" Margin="5"/>
        <Button x:Name="btnTerug" Content="Keer terug" Click="btnTerug_Click" Margin="5"/>
        <Button x:Name="btnCreateItem" Content="Create Item" Click="btnCreateItem_Click" Margin="5"/>
    </StackPanel>
</Window>
