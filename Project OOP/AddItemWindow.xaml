<Window x:Class="Project_OOP.AddItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_OOP"
        mc:Ignorable="d"
        Title="AddItemWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="Geefde naam van je Item"/>
        <TextBox x:Name="tbxName"/>
        <Label Content="Geef de datum van je item"/>
        <TextBox x:Name="tbxDate"/>
        <Button x:Name="btnTerug" Content="Keer terug" Click="btnTerug_Click"/>
        <Button x:Name="btnCreateItem" Content="Create Item" Click="btnCreateItem_Click"/>
    </StackPanel>
</Window>
