<Window x:Class="Project_OOP.ItemAanpassen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_OOP"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="ItemAanpassen" SizeToContent="WidthAndHeight" Width="250">
    <StackPanel>

        <Label Content="Name" Margin="5,0,5,0"/>
        <TextBox x:Name="tbxNameAanpassen" Margin="5,0,5,5"/>

        <Label Content="Datum" Margin="5,0,5,0"/>
        <TextBox x:Name="tbxDateAanpassen" Margin="5,0,5,5"/>

        <Button x:Name="btnSave" Content="Save" Click="btnSave_Click" Background="Green" Margin="5"/>
        <Button x:Name="btnDelete" Content="Delete item" Click="btnDelete_Click" Background="Red" Margin="5"/>
    </StackPanel>
</Window>
