<Window x:Class="Project_OOP.ItemAanpassen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_OOP"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="ItemAanpassen" SizeToContent="WidthAndHeight" Width="250">
    <StackPanel>

        <Label Content="Name"/>
        <TextBox x:Name="tbxNameAanpassen"/>

        <Label Content="Datum"/>
        <TextBox x:Name="tbxDateAanpassen"/>

        <Button x:Name="btnSave" Content="Save" Click="btnSave_Click"/>
        <Button x:Name="btnDelete" Content="Delete item" Click="btnDelete_Click"/>
    </StackPanel>
</Window>
