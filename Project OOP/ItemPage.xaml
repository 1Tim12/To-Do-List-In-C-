<Window x:Class="Project_OOP.ItemPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_OOP"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="ItemPage" SizeToContent="WidthAndHeight" Width="250">
    <StackPanel>
        <ListBox x:Name="ListBoxData" Grid.Row="2" SelectionChanged="ListBoxData_SelectionChanged" SelectionMode="Single"/>
        <Button Content="Laad de items in" Name="LoadJson" Grid.Row="3" Click="LoadJson_Click" Margin="0,10,0,0"/>
    </StackPanel>
</Window>
